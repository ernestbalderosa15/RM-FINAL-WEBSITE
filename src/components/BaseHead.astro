---
import "../styles/global.css";
import { AstroSeo } from "@astrolib/seo";
---

<AstroSeo
  title="Reignite Media | Shopify Web Design & Development"
  description="double your sales in 90 days with a high-converting Shopify website. We design and develop stores that maximize conversions and revenue growth."
  canonical="https://reignitemedia.co"
  openGraph={{
    url: "https://reignitemedia.co",
    title: "Reignite Media | Shopify Web Design & Development",
    description: "double your sales in 90 days with a high-converting Shopify website. We design and develop stores that maximize conversions and revenue growth.",
    images: [
      {
        url: "https://reignitemedia.co/og-image.jpg",
        width: 1200,
        height: 630,
        alt: "Reignite Media - Shopify Web Design & Development",
        type: "image/jpeg",
      },
    ],
    site_name: "Reignite Media",
    type: "website",
    locale: "en_US",
  }}
/>


<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<!-- Basic Meta Tags -->
<title>Reignite Media | Shopify Web Design & Development</title>
<meta
  name="description"
  content="double your sales in 90 days with a high-converting Shopify website. We design and develop stores that maximize conversions and revenue growth."
/>
<meta name="keywords" content="Shopify web design, ecommerce development, high-converting websites, Reignite Media, Shopify experts" />
<meta name="author" content="Reignite Media" />

<!-- Favicons -->
<link rel="icon" href="/RM_PNG.png" sizes="any" />
<link rel="icon" href="/RM_PNG.png" type="image/png" />
<link rel="apple-touch-icon" href="/RM_PNG.png" />
<link rel="manifest" href="/manifest.webmanifest" />

<!-- Favicon for IE -->
<link rel="shortcut icon" href="/RM_PNG.png" type="image/x-icon" />

<!-- Favicons for different sizes -->
<link rel="icon" type="image/png" sizes="16x16" href="/RM_PNG.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/RM_PNG.png" />
<link rel="icon" type="image/png" sizes="48x48" href="/RM_PNG.png" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content="https://reignitemedia.co/" />
<meta property="og:title" content="Reignite Media | Shopify Web Design & Development" />
<meta
  property="og:description"
  content="double your sales in 90 days with a high-converting Shopify website. We design and develop stores that maximize conversions and revenue growth."
/>
<meta
  property="og:image"
  content="https://reignitemedia.co/RM_PNG.png"
/>

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content="https://reignitemedia.co/" />
<meta property="twitter:title" content="Reignite Media | Shopify Web Design & Development" />
<meta
  property="twitter:description"
  content="double your sales in 90 days with a high-converting Shopify website. We design and develop stores that maximize conversions and revenue growth."
/>
<meta
  property="twitter:image"
  content="https://reignitemedia.co/RM_PNG.png"
/>

<!-- Canonical URL -->
<link rel="canonical" href="https://reignitemedia.co/" />

<!-- Additional SEO -->
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />

<!-- Apple Touch Icon -->
<link rel="apple-touch-icon" sizes="180x180" href="/RM_PNG.png" />

<!-- Theme Color for Mobile Browsers -->
<meta name="theme-color" content="#ffffff" />

<!-- For IE -->
<meta http-equiv="X-UA-Compatible" content="IE=edge" />

<!-- Preconnect & Font -->
<link rel="preconnect" href="https://rsms.me/" />
<link rel="stylesheet" href="https://rsms.me/inter/inter.css" />

<!-- Alpine.js -->
<script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

